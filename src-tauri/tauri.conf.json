  "productName": "brew-status",
  "version": "0.2.8",
  "identifier": "com.brewstatus.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM5RjI4OTYyQTc2NzQxNkMKUldSc1FXZW5Zb255T1VSckpTY2RpMXE3cGtNM0xNdGUzS1ZRVExtcTVIV055dy9PdmFTK1g0eEQK",
      "endpoints": [
        "https://github.com/techbrewboss/brew-status/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
